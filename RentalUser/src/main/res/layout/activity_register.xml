<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/window_background"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <include layout="@layout/include_toolbar" />

    <RadioGroup

        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="17dp"
        android:paddingRight="17dp">

        <RadioButton
            android:id="@+id/rb_register_input_phone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:checked="true"
            android:clickable="false"
            android:gravity="left"
            android:text="输入手机号  >"
            android:textColor="@drawable/register_select_text_color"
            android:textSize="@dimen/sp_14" />

        <RadioButton
            android:id="@+id/rb_register_input_code"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:clickable="false"
            android:gravity="center"
            android:text="输入验证码  >"
            android:textColor="@drawable/register_select_text_color"
            android:textSize="@dimen/sp_14" />

        <RadioButton
            android:id="@+id/rb_register_input_pasword"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:clickable="false"
            android:gravity="right"
            android:text="设置密码 "
            android:textColor="@drawable/register_select_text_color"
            android:textSize="@dimen/sp_14" />

    </RadioGroup>

    <LinearLayout
        android:id="@+id/view_register_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="visible">

        <com.suozhang.framework.widget.PowerfulEditText
            android:id="@+id/et_register_phone"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/primary_comparison"
            android:hint="请输入手机号"
            android:inputType="phone"
            android:maxLength="11"
            android:paddingLeft="17dp"
            android:paddingRight="30dp"
            android:textColor="@color/text_primary"
            android:textSize="16sp"
            app:funcType="canClear" />

        <Button
            android:id="@+id/bt_register_send_code"
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="22dp"
            android:background="@drawable/dialog_button"
            android:text="获取验证码"
            android:textColor="@color/primary_comparison"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_show_cer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="17dp"
            android:layout_marginTop="15dp"
            android:drawableLeft="@drawable/ic_agree"
            android:drawablePadding="5dp"
            android:text="我已阅读并同意"
            android:gravity="center_vertical"
            android:textColor="@color/text_primary" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/view_register_code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/primary_comparison"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_register_show_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="17dp"
                android:text=""
                android:textColor="@color/text_primary"
                android:textSize="16sp" />


            <CheckBox
                android:id="@+id/bt_register_get_code"
                android:layout_width="84dp"
                android:layout_height="36dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="17dp"
                android:layout_marginRight="17dp"
                android:background="@drawable/register_get_code_button_bg"
                android:button="@null"
                android:gravity="center"
                android:text="重新获取"
                android:textColor="@drawable/register_get_code_text_color"
                android:textSize="13sp" />
        </RelativeLayout>

        <include layout="@layout/common_cut_match_rule" />

        <com.suozhang.framework.widget.PowerfulEditText
            android:id="@+id/et_login_usernamsse"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/primary_comparison"
            android:hint="请输入6位验证码"
            android:inputType="number"
            android:maxLength="6"
            android:paddingLeft="17dp"
            android:paddingRight="30dp"
            android:textColor="@color/text_primary"
            android:textSize="16sp"
            app:funcType="canClear" />

        <Button
            android:id="@+id/bt_register_submit_code"
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="22dp"
            android:background="@drawable/dialog_button"
            android:text="提交验证码"
            android:textColor="@color/primary_comparison"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/view_register_pasword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <com.suozhang.framework.widget.PowerfulEditText
            android:id="@+id/et_register_password"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/primary_comparison"
            android:hint="请输入密码"
            android:inputType="textPassword"
            android:maxLength="20"
            android:paddingLeft="17dp"
            android:paddingRight="30dp"
            android:textColor="@color/text_primary"
            android:textSize="16sp"
            app:funcType="canClear" />

        <include layout="@layout/common_cut_match_rule" />

        <com.suozhang.framework.widget.PowerfulEditText
            android:id="@+id/et_register_repassword"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/primary_comparison"
            android:hint="请再次输入密码"
            android:inputType="textPassword"
            android:maxLength="20"
            android:paddingLeft="17dp"
            android:paddingRight="30dp"
            android:textColor="@color/text_primary"
            android:textSize="16sp"
            app:funcType="canClear" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="17dp"
            android:layout_marginTop="15dp"
            android:text="密码长度为6-20个字符"
            android:textColor="@color/text_primary"
            android:textSize="13sp" />

        <Button
            android:id="@+id/bt_register_register"
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="22dp"
            android:background="@drawable/dialog_button"
            android:text="完成"
            android:textColor="@color/primary_comparison"
            android:textSize="18sp" />
    </LinearLayout>
</LinearLayout>