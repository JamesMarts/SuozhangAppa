<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/view_ac_buttom"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/window_background"
    android:gravity="center_horizontal"
    android:orientation="vertical">/>

    <RelativeLayout
        android:layout_width="198dp"
        android:layout_height="198dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/bg_control">


        <RelativeLayout
            android:id="@+id/bt_air_to_cold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@drawable/control_air_left_bg"
            android:clickable="true" />

        <RelativeLayout
            android:id="@+id/bt_air_temperature_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/control_air_up_bg"
            android:clickable="true" />


        <RelativeLayout
            android:id="@+id/bt_air_to_warm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/control_air_r_bg"
            android:clickable="true" />

        <RelativeLayout
            android:id="@+id/bt_air_temperature_minus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/control_air_down_bg"
            android:clickable="true" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@drawable/pic_kk_circle"
            android:clickable="true"
            android:focusable="false">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="horizontal"

                >

                <TextView
                    android:id="@+id/tv_ac_temperature_buttom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="26"
                    android:textColor="#747474"
                    android:textSize="36sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="℃"

                    android:textColor="#747474"
                    android:textSize="15sp" />
            </LinearLayout>


        </RelativeLayout>
    </RelativeLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:paddingTop="@dimen/dp_10">

        <TextView
            android:id="@+id/bt_air_to_model"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:clickable="true"
            android:drawablePadding="2dp"
            android:drawableTop="@drawable/control_air_model_button_bg"
            android:gravity="center_horizontal"
            android:text="模式"
            android:textColor="@color/text_secondary"
            android:textSize="12sp"

            />

        <TextView
            android:id="@+id/bt_air_to_wind"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:clickable="true"
            android:drawablePadding="2dp"
            android:drawableTop="@drawable/control_air_wind_button_bg"
            android:gravity="center_horizontal"
            android:text="扫风"
            android:textColor="@color/text_secondary"
            android:textSize="12sp"

            />

        <TextView
            android:id="@+id/bt_air_to_wind_direction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:clickable="true"
            android:drawablePadding="2dp"
            android:drawableTop="@drawable/control_air_winddirection_button_bg"
            android:gravity="center_horizontal"
            android:text="风向"
            android:textColor="@color/text_secondary"
            android:textSize="12sp"

            />

        <TextView
            android:id="@+id/bt_air_to_wind_speed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:clickable="true"
            android:drawablePadding="2dp"
            android:drawableTop="@drawable/control_air_windspeed_button_bg"
            android:gravity="center_horizontal"
            android:text="风速"
            android:textColor="@color/text_secondary"
            android:textSize="12sp" />

    </LinearLayout>
</LinearLayout>