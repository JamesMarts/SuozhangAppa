<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/primary_comparison"
    android:gravity="center_horizontal"
    android:orientation="vertical">
    <include layout="@layout/common_cut_match_rule"/>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="44dp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/bt_control_light"
            android:layout_width="fill_parent"
            android:layout_height="44dp"
            android:layout_weight="1"
            android:background="@color/primary_highlight"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_control_light"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="3dp"
                android:background="@color/primary_comparison"
                android:gravity="center"
                android:text="灯光"
                android:textColor="@color/primary_highlight"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/bt_control_ac"
            android:layout_width="fill_parent"
            android:layout_height="44dp"
            android:layout_weight="1"

            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_control_ac"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="3dp"
                android:background="@color/primary_comparison"
                android:gravity="center"
                android:text="空调"
                android:textColor="@color/text_primary"
                android:textSize="14sp" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/bt_control_tv"

            android:layout_width="fill_parent"
            android:layout_height="44dp"
            android:layout_weight="1"

            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_control_tv"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="3dp"
                android:background="@color/primary_comparison"
                android:gravity="center"
                android:text="电视"
                android:textColor="@color/text_primary"
                android:textSize="14sp" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/bt_control_window"

            android:layout_width="fill_parent"
            android:layout_height="44dp"
            android:layout_weight="1"

            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_control_window"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="3dp"
                android:background="@color/primary_comparison"
                android:gravity="center"
                android:text="窗帘/窗户"
                android:textColor="@color/text_primary"
                android:textSize="14sp" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/bt_control_model"
            android:layout_width="fill_parent"
            android:layout_height="44dp"
            android:layout_weight="1"

            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_control_model"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="3dp"
                android:background="@color/primary_comparison"
                android:gravity="center"
                android:text="情景模式"
                android:textColor="@color/text_primary"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>
    <include layout="@layout/common_cut_match_rule"/>

</LinearLayout>