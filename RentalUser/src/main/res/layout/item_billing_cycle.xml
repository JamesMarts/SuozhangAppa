<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="15dp"
    android:background="@color/primary_comparison">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:orientation="vertical"
        android:paddingLeft="12dp"
        android:paddingRight="12dp">

        <TextView
            android:id="@+id/tv_payment_detail_name"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:drawableLeft="@drawable/ic_payment_detail"
            android:drawablePadding="9dp"
            android:gravity="center_vertical"
            android:paddingLeft="8dp"
            android:text="南方幸福花园"
            android:textColor="@color/text_primary"
            android:textSize="15sp" />

        <include layout="@layout/common_cut_match_rule" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="18sp"
            android:paddingLeft="22dp"
            android:paddingRight="8dp"
            android:paddingTop="18sp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
               <LinearLayout
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content">
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="缴费周期 : "
                       android:textColor="@color/text_primary"
                       android:textSize="14sp"
                       />
                   <TextView
                       android:id="@+id/tv_payment_detail_cycle"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text=" "
                       android:textColor="@color/primary_highlight"
                       android:textSize="14sp"
                       />
               </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="6dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="支付日期 : "
                        android:textColor="@color/text_primary"
                        android:textSize="14sp"
                        />
                    <TextView
                        android:id="@+id/tv_payment_detail_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" "
                        android:textColor="@color/primary_highlight"
                        android:textSize="14sp"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="6dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="支付方式 : "
                        android:textColor="@color/text_primary"
                        android:textSize="14sp"
                        />
                    <TextView
                        android:id="@+id/tv_payment_detail_paytype"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" "
                        android:textColor="@color/primary_highlight"
                        android:textSize="14sp"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="6dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="合计金额 : "
                        android:textColor="@color/text_primary"
                        android:textSize="14sp"
                        />
                    <TextView
                        android:id="@+id/tv_payment_detail_cost"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" "
                        android:textColor="@color/primary_highlight"
                        android:textSize="14sp"
                        />
                </LinearLayout>
            </LinearLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/btn_arrow_right"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                />

        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>