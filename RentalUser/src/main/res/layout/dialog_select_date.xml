<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:background="@drawable/black_rectage"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:orientation="horizontal" >

        <RelativeLayout
            android:id="@+id/txt_date_cancle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:layout_weight="1" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="取消"
                  android:layout_centerVertical="true"
                android:paddingLeft="10dp"
                android:paddingRight="30dp"
                android:textColor="@color/primary_highlight"
                android:textSize="18sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/txt_date_conform"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:layout_weight="1" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:paddingLeft="30dp"
                android:paddingRight="10dp"
                android:text="确定"
                android:layout_centerVertical="true"
                android:textColor="@color/primary_highlight"
                android:textSize="18sp" />
        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="200dp"
          
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginBottom="3dp"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:layout_marginTop="3dp"
                android:orientation="horizontal" >

                <com.suozhang.rentaluser.common.widget.datepicker.WheelView
                    android:id="@+id/wv_select_date_year"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1" />

                <com.suozhang.rentaluser.common.widget.datepicker.WheelView
                    android:id="@+id/wv_select_date_month"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1" />

                <com.suozhang.rentaluser.common.widget.datepicker.WheelView
                    android:id="@+id/wv_select_date_day"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_centerInParent="true"
            android:background="@drawable/trancelt_rectage" />
    </RelativeLayout>

</LinearLayout>