<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/window_background">


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/btn_repair_commit"
        android:layout_marginBottom="15dp"

        android:orientation="vertical">

        <include layout="@layout/include_toolbar" />

        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"

                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@color/bg_color"
                    android:drawableLeft="@drawable/ic_repair_man"
                    android:drawablePadding="12dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="20dp"
                    android:text="张三"
                    android:textColor="@color/text_primary"
                    android:textSize="15sp" />

                <include layout="@layout/common_cut_off_rule" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@color/bg_color"
                    android:drawableLeft="@drawable/ic_repair_phone"
                    android:drawablePadding="12dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="20dp"
                    android:text="18229010665"
                    android:textColor="@color/text_primary"
                    android:textSize="15sp" />

                <include layout="@layout/common_cut_off_rule" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@color/bg_color"
                    android:drawableLeft="@drawable/ic_repair_location"
                    android:drawablePadding="12dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="20dp"
                    android:text="深圳市南山区科华路3号"
                    android:textColor="@color/text_primary"
                    android:textSize="15sp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="15dp"
                    android:background="@color/primary_comparison"
                    android:gravity="center_vertical"
                    android:paddingLeft="20dp"
                    android:paddingRight="15dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="报修类型"
                        android:textColor="@color/text_primary"
                        android:textSize="16sp"

                        />

                    <TextView
                        android:id="@+id/btn_repair_type"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:drawablePadding="5dp"
                        android:drawableRight="@drawable/btn_arrow_right"
                        android:gravity="center_vertical|end"
                        android:hint="请选择"
                        android:textColor="@color/text_secondary"
                        android:textSize="14sp" />
                </RelativeLayout>

                <include layout="@layout/common_cut_off_rule" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="145dp"
                    android:background="@color/primary_comparison"
                    android:orientation="vertical"
                    android:paddingLeft="20dp"
                    android:paddingRight="15dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:text="报修问题描述"
                        android:textColor="@color/text_primary"
                        android:textSize="16sp"

                        />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/primary_comparison"
                        android:gravity="start"
                        android:hint="请输入报修问题的详细信息"
                        android:paddingTop="15dp"
                        android:textColor="@color/text_primary"
                        android:textColorHint="@color/text_secondary"
                        android:textSize="14sp" />
                </LinearLayout>

                <include layout="@layout/common_cut_off_rule" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/primary_comparison"
                    android:orientation="vertical"
                    android:paddingLeft="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:text="拍摄照片"
                        android:textColor="@color/text_primary"
                        android:textSize="16sp" />

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/recycler"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp"
                        android:layout_marginTop="20dp"
                        android:overScrollMode="never" />

                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_marginTop="15dp"
                    android:background="@color/primary_comparison"
                    android:gravity="center_vertical"
                    android:paddingLeft="20dp"
                    android:paddingRight="15dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="期待上门时间"
                        android:textColor="@color/text_primary"
                        android:textSize="16sp"

                        />

                    <TextView
                        android:id="@+id/btn_repair_time"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:drawablePadding="5dp"
                        android:drawableRight="@drawable/btn_arrow_right"
                        android:gravity="center_vertical|end"
                        android:hint="请选择"
                        android:textColor="@color/text_remind"
                        android:textSize="14sp" />
                </RelativeLayout>
            </LinearLayout>

        </android.support.v4.widget.NestedScrollView>


    </LinearLayout>

    <TextView
        android:id="@+id/btn_repair_commit"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:background="@color/primary_highlight"
        android:focusable="true"
        android:gravity="center"
        android:text="提交"
        android:textColor="@color/primary_comparison"
        android:textSize="18sp" />
</RelativeLayout>