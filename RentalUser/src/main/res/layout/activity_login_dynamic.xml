<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/window_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:gravity="center_horizontal"
        android:orientation="vertical">

        <android.support.v7.widget.Toolbar
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:minHeight="45dp"
            android:background="@color/window_background"
            app:navigationIcon="@drawable/btn_arrow_left"
            android:titleMarginStart="-30dp"
            app:title="标题"

            app:titleTextAppearance="@style/BaseToolbarTitleTextAppearanceLogin"
            android:theme="@style/BaseToolbarThemeLogin"
            app:popupTheme="@style/BaseToolbarPopupMenuTheme">

        </android.support.v7.widget.Toolbar>




            <ImageView
                android:id="@+id/iv_head"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="17dp"
                android:src="@drawable/ic_login_logo"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true" />





        <LinearLayout
            android:id="@+id/view_show_nrrmal_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="17dp"
            android:layout_marginTop="30dp"
            android:visibility="visible">

            <com.suozhang.framework.widget.PowerfulEditText
                android:id="@+id/et_login_phone"
                android:layout_width="match_parent"
                android:layout_height="57dp"
                android:layout_marginLeft="23dp"
                android:layout_marginRight="23dp"
                android:background="@color/transparent"
                android:drawableLeft="@drawable/ic_username"
                android:drawablePadding="12dp"
                android:hint="请输入手机号"
                android:maxLength="11"
                android:maxLines="1"
                android:inputType="phone"
                android:textColor="@color/text_secondary"
                android:textSize="16sp"

                app:funcType="canClear"/>




            <include layout="@layout/common_cut_match_rule" />

            <LinearLayout
                android:id="@+id/layout_login_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/window_background"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="23dp"
                android:paddingRight="23dp"
                android:visibility="visible">

                <com.suozhang.framework.widget.PowerfulEditText
                    android:id="@+id/edt_code"
                    android:layout_width="match_parent"
                    android:layout_height="57dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:background="@color/transparent"
                    android:drawableLeft="@drawable/ic_password"
                    android:drawablePadding="12dp"
                    android:hint="请输入验证码"
                    android:maxLength="6"
                    android:maxLines="1"
                    android:textColor="@color/text_secondary"
                    android:textSize="16sp"
                    app:funcType="canClear"/>

                <Button
                    android:id="@+id/btn_send"
                    android:layout_width="108dp"
                    android:layout_height="36dp"
                    android:background="@drawable/login_get_phone_code"
                    android:text="获取验证码"
                    android:textColor="@color/text_secondary"
                    android:textSize="16sp"/>
            </LinearLayout>
            <include layout="@layout/common_cut_match_rule" />
        </LinearLayout>





        <Button
            android:id="@+id/bt_login_dynamic"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginLeft="17dp"
            android:layout_marginRight="17dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/dialog_button"
            android:text="登 录"
            android:textColor="@color/primary_comparison"
            android:textSize="18sp" />



    </LinearLayout>

</RelativeLayout>