<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/window_background"
    android:orientation="vertical">

    <include layout="@layout/include_toolbar" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/sv_scroll"
            android:layout_above="@+id/view_buttom">

            <LinearLayout
                android:id="@+id/l_test"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@color/primary_comparison"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:orientation="vertical">

                <include layout="@layout/include_life_contract_info" />

                <include layout="@layout/include_life_room_info" />
            </LinearLayout>

        </android.support.v4.widget.NestedScrollView>
        <LinearLayout
            android:id="@+id/view_buttom"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_alignParentBottom="true"
            android:background="@color/primary_comparison"
            android:orientation="horizontal"
           >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:visibility="gone"
                android:id="@+id/view_buttom_no"
                android:paddingLeft="20dp"
                android:orientation="horizontal"
                >
                <ImageButton
                    android:id="@+id/btn_to_call_phone"
                    android:layout_width="45dp"
                    android:layout_height="33dp"
                    android:background="@drawable/bg_report_edittext"
                    android:src="@drawable/ic_life_call_phone" />

                <TextView
                    android:id="@+id/btn_to_doubt"
                    android:layout_width="131dp"
                    android:layout_height="33dp"

                    android:layout_marginLeft="15dp"
                    android:background="@drawable/bg_report_edittext"
                    android:gravity="center"
                    android:text="拒绝"
                    android:textColor="@color/text_remind"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/btn_to_pay"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:layout_marginLeft="15dp"
                    android:background="@color/primary_highlight"
                    android:gravity="center"
                    android:text="确认租约"
                    android:textColor="@color/primary_comparison"
                    android:textSize="18sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                 android:id="@+id/view_buttom_yes"
                >

                <TextView
                    android:id="@+id/tv_signing_date"
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_height="match_parent"

                    android:background="#d7f9f6"
                    android:gravity="center"
                    android:text=""
                    android:textColor="@color/text_primary"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/btn_preview_contract"
                    android:layout_height="match_parent"
                    android:layout_width="0dp"
                    android:layout_weight="2.5"
                    android:background="#a8f3ec"
                    android:gravity="center"
                    android:text="预览合同"
                    android:textColor="@color/text_primary"
                    android:textSize="18sp" />
            </LinearLayout>
            <TextView
                android:id="@+id/btn_refused_reason"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_alignParentBottom="true"
                android:layout_gravity="bottom"
                android:background="@color/primary_highlight"
                android:focusable="true"
                android:gravity="center"
                android:text="发送"
                android:textColor="@color/primary_comparison"
                android:textSize="18sp" />
        </LinearLayout>


    </RelativeLayout>
</LinearLayout>
