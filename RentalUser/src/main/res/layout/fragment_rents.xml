<com.scwang.smartrefresh.layout.SmartRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/smartRefesh"
    app:srlPrimaryColor="@color/primary_highlight"
    android:layout_height="match_parent">
    <com.scwang.smartrefresh.header.PhoenixHeader
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/window_background"
        android:orientation="vertical"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:context="com.suozhang.rentaluser.feature.rental.view.RentsFragment">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="59dp"
            android:background="@color/primary_highlight"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="15dp">

            <TextView
                android:id="@+id/tv_location_city"
                android:layout_width="72dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="6dp"
                android:drawablePadding="3dp"
                android:drawableRight="@drawable/btn_allow_down_white"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:text="定位中"
                android:textColor="@color/primary_comparison"
                android:textSize="15sp" />

            <LinearLayout
                android:id="@+id/btn_rents_search"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:background="@drawable/rents_search_view_bg"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_rents_search"
                    android:drawablePadding="7dp"
                    android:gravity="center_vertical"
                    android:text="区域，地铁，关键字"
                    android:textColor="@color/text_secondary"
                    android:textSize="15sp" />
            </LinearLayout>
        </LinearLayout>

        <android.support.v4.widget.NestedScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:orientation="vertical">

                <com.youth.banner.Banner
                    android:id="@+id/banner"
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    app:indicator_drawable_selected="@drawable/indicator_drawable_selected"
                    app:indicator_drawable_unselected="@drawable/indicator_drawable_unselected"
                    app:indicator_height="6dp"
                    app:indicator_margin="7dp"
                    app:indicator_width="6dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="113dp"
                    android:background="@color/primary_comparison"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp">

                    <TextView
                        android:id="@+id/btn_whole_rent"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:drawablePadding="11dp"
                        android:drawableTop="@drawable/btn_whole_rent"
                        android:gravity="center_horizontal"
                        android:text="整租"
                        android:textColor="@color/text_primary"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/btn_joint_rent"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:drawablePadding="11dp"
                        android:drawableTop="@drawable/btn_joint_rent"
                        android:gravity="center_horizontal"
                        android:text="合租"
                        android:textColor="@color/text_primary"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/btn_near_rent"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:drawablePadding="11dp"
                        android:drawableTop="@drawable/btn_near_rent"
                        android:gravity="center_horizontal"
                        android:text="周边"
                        android:textColor="@color/text_primary"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/btn_map_rent"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:drawablePadding="11dp"
                        android:drawableTop="@drawable/btn_map_rent"
                        android:gravity="center_horizontal"
                        android:text="地图选房"
                        android:textColor="@color/text_primary"
                        android:textSize="14sp" />
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:layout_marginTop="15dp"
                    android:background="@color/primary_comparison">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="17dp"
                        android:drawableLeft="@drawable/ic_rent_guess_like"
                        android:drawablePadding="9dp"
                        android:gravity="center_vertical"
                        android:text="猜你喜欢"
                        android:textColor="@color/text_primary"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/btn_rent_like_more"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:visibility="gone"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="17dp"
                        android:drawablePadding="9dp"
                        android:drawableRight="@drawable/btn_arrow_right"
                        android:gravity="center_vertical"
                        android:text="更多"
                        android:textColor="@color/text_secondary"
                        android:textSize="14sp" />

                </RelativeLayout>

                <include layout="@layout/common_cut_off_rule" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rv_guess_you_like"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/primary_comparison"
                    android:focusable="false"
                    android:nestedScrollingEnabled="false" />
            </LinearLayout>
        </android.support.v4.widget.NestedScrollView>

    </LinearLayout>
</com.scwang.smartrefresh.layout.SmartRefreshLayout>