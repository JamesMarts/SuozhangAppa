<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:layout_marginTop="15dp"
    android:background="@color/primary_comparison"
    android:paddingLeft="20dp"
    android:paddingRight="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_centerVertical="true"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tv_repair_service_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:drawableLeft="@drawable/life_billing_top"
                android:drawablePadding="8dp"
                android:text=""
                android:textColor="@color/text_primary"
                android:textSize="16sp" />


            <TextView
                android:id="@+id/tv_repair_service_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:drawablePadding="5dp"
                android:drawableRight="@drawable/btn_arrow_right"
                android:text=""
                android:textColor="@color/text_remind"
                android:textSize="14sp" />


        </RelativeLayout>

        <TextView
            android:id="@+id/tv_repair_service_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="13dp"
            android:text=""
            android:singleLine="true"
            android:ellipsize="end"
            android:textColor="@color/text_secondary"
            android:textSize="14sp" />
    </LinearLayout>
</RelativeLayout>