<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			  xmlns:app="http://schemas.android.com/apk/res-auto"
			  xmlns:tools="http://schemas.android.com/tools"
			  android:layout_width="match_parent"
			  android:layout_height="match_parent"
			  android:background="@color/bg_normal"
			  android:orientation="vertical"

			  tools:context=".feature.mine.view.RechargeActivity">

	<include layout="@layout/include_toolbar"/>
	<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical"
			android:visibility="visible"
			android:id="@+id/view_phone_first"
	>


		<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginTop="10dp"
				android:orientation="vertical"
				android:background="@color/primary_comparison"
		>

			<LinearLayout
					android:layout_width="match_parent"
					android:orientation="horizontal"
					android:gravity="center_vertical"
					android:paddingLeft="13dp"
					android:paddingRight="12dp"
					android:layout_height="50dp">

				<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="已绑定手机号："
						android:textColor="#ff333333"
						android:textSize="15dp"
				/>
				<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="186****0362"
						android:textColor="#ff999999"
						android:textSize="15sp"
				/>
			</LinearLayout>
			<include layout="@layout/common_cut_off_rule"/>
			<RelativeLayout
					android:layout_width="match_parent"
					android:orientation="horizontal"
					android:gravity="center_vertical"
					android:paddingLeft="13dp"
					android:paddingRight="12dp"
					android:layout_height="50dp">

				<TextView
						android:id="@+id/tv_phone"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="验证码："
						android:layout_centerVertical="true"
						android:textColor="@color/text_primary"
						android:textSize="15dp"
				/>
				<com.suozhang.framework.widget.PowerfulEditText
						android:layout_width="wrap_content"
						android:layout_toRightOf="@+id/tv_phone"
						android:paddingRight="50dp"
						android:background="@color/transparent"
						android:gravity="center_vertical"
						android:hint="请输入验证码"
						android:paddingLeft="15dp"
						android:textSize="15sp"
						android:layout_centerVertical="true"
						android:inputType="number"
						android:maxLength="6"
						android:textColor="@color/text_primary"
						app:funcType="canClear"
						android:textColorHint="#999999"
						android:layout_height="match_parent"/>
				<Button
						android:id="@+id/btn_withdraw_wx"
						android:layout_width="120dp"
						android:text="获取验证码"
						android:layout_alignParentRight="true"
						android:layout_centerVertical="true"
						android:textSize="15sp"
						android:textColor="@color/primary_comparison"
						android:background="@drawable/common_primary_bg"
						android:layout_height="30dp"/>
			</RelativeLayout>

		</LinearLayout>

		<Button
				android:id="@+id/btn_user_editphone_next"
				android:layout_width="match_parent"
				android:layout_marginLeft="12dp"
				android:layout_marginTop="30dp"
				android:text="下一步"
				android:textSize="15sp"
				android:textColor="@color/primary_comparison"
				android:background="@drawable/common_primary_bg"
				android:layout_marginRight="12dp"
				android:layout_height="40dp"/>
	</LinearLayout>
	<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical"
			android:visibility="gone"
			android:id="@+id/view_phone_next"
	>


		<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginTop="10dp"
				android:orientation="vertical"
				android:background="@color/primary_comparison"
		>
			<include layout="@layout/common_cut_off_rule"/>
			<RelativeLayout
					android:layout_width="match_parent"
					android:orientation="horizontal"
					android:gravity="center_vertical"
					android:paddingLeft="13dp"
					android:paddingRight="12dp"
					android:layout_height="50dp">

				<TextView
						android:id="@+id/tv_phone1"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="手机号："
						android:layout_centerVertical="true"
						android:textColor="@color/text_primary"
						android:textSize="15dp"
				/>
				<com.suozhang.framework.widget.PowerfulEditText
						android:layout_width="wrap_content"
						android:layout_toRightOf="@+id/tv_phone1"
						android:paddingRight="50dp"
						android:background="@color/transparent"
						android:gravity="center_vertical"
						android:hint="输入新的手机号"
						android:paddingLeft="10dp"
						android:textSize="15sp"
						android:layout_centerVertical="true"
						android:inputType="number"
						android:maxLength="11"
						android:textColor="@color/text_primary"
						app:funcType="canClear"
						android:textColorHint="#999999"
						android:layout_height="match_parent"/>
				<Button
						android:id="@+id/btn_withdraw"
						android:layout_width="120dp"
						android:text="获取验证码"
						android:layout_alignParentRight="true"
						android:layout_centerVertical="true"
						android:textSize="15sp"
						android:textColor="@color/primary_comparison"
						android:background="@drawable/common_primary_bg"
						android:layout_height="30dp"/>
			</RelativeLayout>
			<LinearLayout
					android:layout_width="match_parent"
					android:orientation="horizontal"
					android:gravity="center_vertical"
					android:paddingLeft="13dp"
					android:paddingRight="12dp"
					android:layout_height="50dp">

				<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="验证码："
						android:textColor="#ff333333"
						android:textSize="15dp"
				/>
				<com.suozhang.framework.widget.PowerfulEditText
						android:layout_width="wrap_content"
						android:layout_toRightOf="@+id/tv_phone1"
						android:paddingRight="50dp"
						android:background="@color/transparent"
						android:gravity="center_vertical"
						android:hint="请输入验证码"
						android:paddingLeft="10dp"
						android:textSize="15sp"
						android:layout_centerVertical="true"
						android:inputType="number"
						android:maxLength="6"
						android:textColor="@color/text_primary"
						app:funcType="canClear"
						android:textColorHint="#999999"
						android:layout_height="match_parent"/>
			</LinearLayout>


		</LinearLayout>

		<Button
				android:id="@+id/btn_user_editphone_comlete"
				android:layout_width="match_parent"
				android:layout_marginLeft="12dp"
				android:layout_marginTop="30dp"
				android:text="完成"
				android:textSize="15sp"
				android:textColor="@color/primary_comparison"
				android:background="@drawable/common_primary_bg"
				android:layout_marginRight="12dp"
				android:layout_height="40dp"/>
	</LinearLayout>
	<LinearLayout
			android:id="@+id/view_phone_success"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:orientation="vertical"
			android:visibility="gone"
			android:gravity="center_horizontal"

	>
		<ImageView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginTop="120dp"
				android:src="@drawable/icon_user_editphone_success"
		/>
		<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginTop="25dp"
				android:text="您已完成绑定手机！"
				android:textColor="@color/text_black"
				android:textSize="15dp"
		/>
		<LinearLayout
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:orientation="horizontal"
				android:gravity="center_vertical"
				android:layout_marginTop="12dp"

		>
			<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"

					android:text="已绑定的手机号 "
					android:textColor="@color/text_black"
					android:textSize="15dp"
			/>
			<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="18229010638"
					android:textColor="@color/primary_highlight"
					android:textSize="15dp"
			/>
		</LinearLayout>

		<Button
				android:id="@+id/btn_user_editphone_success"
				android:layout_width="match_parent"
				android:layout_marginLeft="12dp"
				android:layout_marginTop="158dp"
				android:text="完成"
				android:textSize="15sp"
				android:textColor="@color/primary_comparison"
				android:background="@drawable/common_primary_bg"
				android:layout_marginRight="12dp"
				android:layout_height="40dp"/>

	</LinearLayout>
</LinearLayout>