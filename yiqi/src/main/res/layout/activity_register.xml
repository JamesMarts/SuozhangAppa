<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:tools="http://schemas.android.com/tools"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		android:layout_width="match_parent"
		android:orientation="vertical"
		android:gravity="center_horizontal"
		android:background="@color/bg_normal"
		android:layout_height="match_parent"
		tools:context=".feature.common.view.LoginActivity">
	<include layout="@layout/include_toolbar"/>
	<com.suozhang.framework.widget.PowerfulEditText
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:background="@drawable/bg_user_login_edittext"
			android:gravity="center_vertical"
			android:hint="汉字、数字或字母的用户名"
			android:layout_marginTop="50dp"
			android:paddingLeft="44dp"
			android:textSize="13sp"
			android:layout_centerVertical="true"
			android:inputType="textPersonName"
			android:maxLength="18"
			android:textColor="@color/text_primary"
			app:funcType="canClear"
			android:paddingRight="12dp"
			android:textColorHint="#999999"
	/>
	<com.suozhang.framework.widget.PowerfulEditText
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:background="@drawable/bg_user_login_edittext"
			android:gravity="center_vertical"
			android:hint="请设置6-20位数字或字母的密码"
			android:layout_marginTop="30dp"
			android:paddingLeft="44dp"
			android:textSize="13sp"
			android:layout_centerVertical="true"
			android:inputType="textPassword"
			android:maxLength="16"
			android:textColor="@color/text_primary"
			android:paddingRight="12dp"
			android:textColorHint="#999999"
	/>
	<RelativeLayout
			android:layout_width="300dp"
			android:layout_height="40dp"
			android:background="@drawable/bg_user_login_edittext"
			android:layout_marginTop="30dp"
	>
		<com.suozhang.framework.widget.PowerfulEditText
				android:layout_width="wrap_content"
				android:layout_height="match_parent"

				android:background="@color/transparent"
				android:gravity="center_vertical"
				android:hint="请输入邀请码"
				android:paddingLeft="44dp"
				android:textSize="13sp"
				android:layout_centerVertical="true"
				android:inputType="number"
				android:maxLength="11"
				android:textColor="@color/text_primary"
				android:paddingRight="50dp"
				android:textColorHint="#999999"
		/>
		<ImageView
				android:layout_width="wrap_content"
				android:layout_height="match_parent"
				android:gravity="center_vertical"
				android:paddingLeft="20dp"
				android:layout_alignParentRight="true"
				android:layout_centerVertical="true"
				android:paddingRight="23dp"
				android:src="@drawable/icon_user_register_scan"
		/>
	</RelativeLayout>

	<RelativeLayout
			android:layout_width="300dp"
			android:layout_height="40dp"
			android:background="@drawable/bg_user_login_edittext"
			android:layout_marginTop="30dp"
	>
		<com.suozhang.framework.widget.PowerfulEditText
				android:layout_width="wrap_content"
				android:layout_height="match_parent"

				android:background="@color/transparent"
				android:gravity="center_vertical"
				android:hint="请输入手机号码"
				android:paddingLeft="44dp"
				android:textSize="13sp"
				android:layout_centerVertical="true"
				android:inputType="number"
				android:maxLength="11"
				android:textColor="@color/text_primary"
				app:funcType="canClear"
				android:paddingRight="50dp"
				android:textColorHint="#999999"
		/>
		<TextView
				android:layout_width="wrap_content"
				android:layout_height="match_parent"
				android:gravity="center_vertical"
				android:text="获取验证码"
				android:layout_alignParentRight="true"
				android:layout_centerVertical="true"
				android:paddingRight="23dp"
				android:textColor="@color/primary_highlight"
				android:textSize="11sp"
		/>
	</RelativeLayout>


	<com.suozhang.framework.widget.PowerfulEditText
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:background="@drawable/bg_user_login_edittext"
			android:gravity="center_vertical"
			android:hint="请输入验证码"
			android:layout_marginTop="30dp"
			android:paddingLeft="44dp"
			android:textSize="13sp"
			android:layout_centerVertical="true"
			android:inputType="number"
			android:maxLength="6"
			android:textColor="@color/text_primary"
			app:funcType="canClear"
			android:paddingRight="12dp"
			android:textColorHint="#999999"
	/>
	q
	<Button
			android:id="@+id/btn_user_login"
			android:layout_width="wrap_content"
			android:layout_marginTop="50dp"
			android:text="注册"
			android:textSize="15sp"
			android:textColor="@color/primary_comparison"
			android:background="@drawable/bg_user_login_button"
			android:layout_height="40dp"/>
	<TextView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="已有账号>"
			android:paddingLeft="53dp"
			android:layout_marginTop="25dp"
			android:textColor="@color/primary_highlight"
			android:textSize="13sp"
	/>
	<LinearLayout
			android:layout_marginLeft="30dp"
			android:layout_width="match_parent"
			android:gravity="bottom"
			android:paddingBottom="25dp"
			android:layout_height="match_parent">
		<CheckBox
				android:button="@drawable/user_login_radio_bg"
				android:layout_width="wrap_content"
				android:checked="true"
				android:layout_height="wrap_content"/>
		<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textColor="@color/text_999999"
				android:textSize="12sp"
				android:layout_marginLeft="5dp"
				android:text="注册表示已满18岁并同意《常红彩站用户协议》"

		/>
	</LinearLayout>

</LinearLayout>