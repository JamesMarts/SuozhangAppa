<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:tools="http://schemas.android.com/tools"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		android:layout_width="match_parent"
		android:orientation="vertical"
		android:gravity="center_horizontal"
		android:background="@color/bg_normal"
		android:layout_height="match_parent"
		tools:context=".feature.common.view.LoginActivity">
	<include layout="@layout/include_toolbar"/>
	<ImageView android:layout_width="wrap_content"
			   android:layout_height="wrap_content"
			   android:layout_marginTop="45dp"
			   android:paddingBottom="17dp"
			   android:src="@drawable/icon_logochanghong"
	/>
	<com.suozhang.framework.widget.PowerfulEditText
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:background="@drawable/bg_user_login_edittext"
			android:gravity="center_vertical"
			android:hint="仅支持中国大陆手机号"
			android:layout_marginTop="0dp"
			android:paddingLeft="43dp"
			android:textSize="13sp"
			android:layout_centerVertical="true"
			android:inputType="number"
			android:maxLength="11"
			android:textColor="@color/text_primary"
			app:funcType="canClear"
			android:paddingRight="12dp"
			android:textColorHint="#999999"
	/>
	<com.suozhang.framework.widget.PowerfulEditText
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:background="@drawable/bg_user_login_edittext"
			android:gravity="center_vertical"
			android:hint="请输入密码"
			android:layout_marginTop="44dp"
			android:paddingLeft="43dp"
			android:textSize="13sp"
			android:layout_centerVertical="true"
			android:inputType="textPassword"
			android:maxLength="6"
			android:textColor="@color/text_primary"
			app:funcType="canWatchPwd"
			android:paddingRight="12dp"
			android:textColorHint="#999999"
	/>

	<CheckBox
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:background="@color/transparent"
			android:button="@null"
			android:checked="true"
			android:gravity="center_vertical"
			android:layout_marginTop="25dp"
			android:paddingLeft="55dp"
			android:drawableLeft="@drawable/user_login_radio_bg"
			android:drawablePadding="5dp"
			android:text="记住密码"
			android:textColor="@color/primary_highlight"
			android:textSize="15sp" />



	<Button
			android:id="@+id/btn_user_login"
			android:layout_width="wrap_content"
			android:layout_marginTop="25dp"
			android:text="登录"
			android:textSize="15sp"
			android:textColor="@color/primary_comparison"
			android:background="@drawable/bg_user_login_button"
			android:layout_height="40dp"/>
	<RelativeLayout
			android:layout_width="match_parent"
			android:paddingLeft="51dp"
			android:paddingRight="53dp"
			android:layout_marginTop="39dp"
			android:layout_height="wrap_content">

		<TextView
				android:id="@+id/btn_user_forget"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="忘记密码？"
				android:textColor="@color/primary_highlight"
				android:textSize="15sp"
		/>
		<View android:layout_width="1dp" android:layout_height="14dp"
			  android:background="@color/primary_highlight"
			  android:layout_centerInParent="true"/>
		<TextView
				android:id="@+id/btn_user_register"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="注册账户"
				android:layout_alignParentRight="true"
				android:textColor="@color/primary_highlight"
				android:textSize="15sp"
		/>
	</RelativeLayout>

</LinearLayout>