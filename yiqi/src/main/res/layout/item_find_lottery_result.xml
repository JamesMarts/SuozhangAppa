<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		android:background="@color/primary_comparison"
		android:layout_width="match_parent"
		android:orientation="vertical"
		android:paddingLeft="12dp"
		android:paddingRight="12dp"
		android:layout_height="85dp">
	<LinearLayout
			android:orientation="horizontal"
			android:layout_width="match_parent"
			android:gravity="center_vertical"
			android:layout_marginTop="8dp"
			android:layout_height="wrap_content">
		<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="双色球"
				android:textColor="@color/text_primary"
				android:textSize="15sp"
		/>
		<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="第18016期"
				android:layout_marginLeft="14dp"
				android:textColor="@color/text_secondary"
				android:textSize="12sp"
		/>
		<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="2018-08-06  21：15（周二）"
				android:layout_marginLeft="20dp"
				android:textColor="@color/text_secondary"
				android:textSize="12sp"
		/>
	</LinearLayout>
	<RelativeLayout
			android:id="@+id/btn_result_view"
			android:layout_width="wrap_content"
			android:layout_height="match_parent">


		<LinearLayout
				android:layout_width="wrap_content"
				android:orientation="horizontal"
				android:layout_marginTop="14dp"
				android:layout_height="wrap_content">
			<TextView
					android:layout_width="30dp"
					android:textSize="13dp"
					android:textColor="@color/primary_comparison"
					android:gravity="center"
					android:text="13"
					android:background="@drawable/documentary_list_first_sign"
					android:layout_height="30dp"/>
			<TextView
					android:layout_width="30dp"
					android:textSize="13dp"
					android:textColor="@color/primary_comparison"
					android:gravity="center"
					android:text="04"
					android:layout_marginLeft="10dp"
					android:background="@drawable/documentary_list_first_sign"
					android:layout_height="30dp"/>
			<TextView
					android:layout_width="30dp"
					android:textSize="13dp"
					android:textColor="@color/primary_comparison"
					android:gravity="center"
					android:text="88"
					android:layout_marginLeft="10dp"
					android:background="@drawable/documentary_list_first_sign"
					android:layout_height="30dp"/>
			<TextView
					android:layout_width="30dp"
					android:textSize="13dp"
					android:textColor="@color/primary_comparison"
					android:gravity="center"
					android:text="35"
					android:layout_marginLeft="10dp"
					android:background="@drawable/documentary_list_first_sign"
					android:layout_height="30dp"/>
			<TextView
					android:layout_width="30dp"
					android:textSize="13dp"
					android:textColor="@color/primary_comparison"
					android:gravity="center"
					android:text="13"
					android:layout_marginLeft="10dp"
					android:background="@drawable/documentary_list_first_sign"
					android:layout_height="30dp"/>
			<TextView
					android:layout_width="30dp"
					android:textSize="13dp"
					android:textColor="@color/primary_comparison"
					android:gravity="center"
					android:text="94"
					android:layout_marginLeft="10dp"
					android:background="@drawable/documentary_list_first_blue"
					android:layout_height="30dp"/>
			<TextView
					android:layout_width="30dp"
					android:textSize="13dp"
					android:textColor="@color/primary_comparison"
					android:gravity="center"
					android:text="99"
					android:layout_marginLeft="10dp"
					android:background="@drawable/documentary_list_first_blue"
					android:layout_height="30dp"/>


		</LinearLayout>

		<ImageView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_alignParentRight="true"
				android:id="@+id/btn_more"
				android:layout_centerVertical="true"
				android:src="@drawable/icon_kaijiang_gengduo"/>
	</RelativeLayout>

</LinearLayout>