<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_normal"
    android:orientation="vertical">

    <include layout="@layout/include_toolbar" />

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/primary_comparison"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="12dp">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@color/transparent"
            android:button="@null"
            android:checked="true"
            android:paddingRight="25dp"
            android:drawableLeft="@drawable/icon_jinghua"
            android:drawablePadding="5dp"
            android:text="精华"
            android:textColor="@drawable/find_circle_like_text_bg"
            android:textSize="13sp" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="25dp"
            android:background="@color/transparent"
            android:button="@null"
            android:paddingRight="25dp"

            android:drawablePadding="5dp"
            android:text="全部"
            android:textColor="@drawable/find_circle_like_text_bg"
            android:textSize="13sp" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="25dp"
            android:background="@color/transparent"
            android:button="@null"

            android:drawablePadding="5dp"
            android:text="我的"
            android:textColor="@drawable/find_circle_like_text_bg"
            android:textSize="13sp" />

    </RadioGroup>

    <include layout="@layout/common_cut_match_rule" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_find_circle"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>
