<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
				xmlns:app="http://schemas.android.com/apk/res-auto"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:background="@color/bg_normal">
	<LinearLayout
			android:layout_width="match_parent"
			android:orientation="vertical"
			android:layout_height="match_parent">
		<include layout="@layout/include_toolbar"/>

		<FrameLayout
				android:id="@+id/fl_container"
				android:layout_width="match_parent"
				android:layout_height="match_parent"

				android:layout_above="@+id/line"/>
	</LinearLayout>


	<RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
				android:id="@+id/radiogroup"
				android:layout_width="match_parent"
				android:layout_height="49dp"
				android:layout_alignParentBottom="true"
				android:background="@color/primary_comparison"
				android:gravity="center_vertical"
				android:orientation="horizontal">


		<RadioButton
				android:id="@+id/rb_share_circle"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:button="@null"
				android:checked="true"
				android:drawablePadding="3dp"
				android:drawableTop="@drawable/find_circle_list"
				android:gravity="center_horizontal"
				android:text="晒单圈"
				android:textColor="@drawable/main_buttom_bar_text_color"
				android:textSize="11sp"/>

		<RadioButton
				android:id="@+id/rb_write_circle"

				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:button="@null"
				android:checked="false"
				android:drawablePadding="3dp"
				android:drawableTop="@drawable/find_circle_write"
				android:gravity="center_horizontal"
				android:text="我要晒单"
				android:textColor="@drawable/main_buttom_bar_text_color"
				android:textSize="11sp"/>

		<RadioButton
				android:id="@+id/rb_mine_circle"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:button="@null"
				android:checked="false"
				android:drawablePadding="3dp"
				android:drawableTop="@drawable/find_circle_mine"
				android:gravity="center_horizontal"
				android:text="我"
				android:textColor="@drawable/main_buttom_bar_text_color"
				android:textSize="11sp"/>


	</RadioGroup>

</RelativeLayout>
