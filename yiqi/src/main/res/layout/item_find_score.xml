<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			  android:layout_width="match_parent"
			  android:layout_height="90dp"
			  android:background="@color/primary_comparison"
			  android:gravity="center_vertical"
			  android:paddingLeft="18dp"
>
	<LinearLayout
			android:layout_width="wrap_content"
			android:orientation="vertical"
			android:gravity="center_horizontal"
			android:layout_height="wrap_content">
		<TextView
				android:layout_width="45dp"
				android:layout_height="20dp"
				android:text="完场"
				android:gravity="center"
				android:background="@color/text_999999"
				android:textColor="@color/primary_comparison"
				android:textSize="12sp"
		/>
		<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="意甲002"
				android:layout_marginTop="6dp"
				android:textColor="@color/text_primary"
				android:textSize="12sp"
		/>
	</LinearLayout>
	<LinearLayout
			android:layout_width="wrap_content"
			android:orientation="vertical"
			android:layout_marginLeft="32dp"
			android:gravity="center_horizontal"
			android:layout_height="wrap_content">
		<ImageView
				android:layout_width="30dp"
				android:layout_height="30dp"
				android:src="@drawable/ic_lottery_foot"
		/>
		<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="拉齐奥"
				android:layout_marginTop="8dp"
				android:textColor="@color/text_primary"
				android:textSize="12sp"
		/>
	</LinearLayout>
	<LinearLayout
			android:layout_width="wrap_content"
			android:orientation="vertical"
			android:layout_marginLeft="38dp"
			android:gravity="center_horizontal"
			android:layout_height="wrap_content">
		<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="02-27（周二 ）03：00"
				android:textColor="@color/text_secondary"
				android:textSize="12sp"
		/>
		<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginTop="6dp"
				android:text="3 ：1"
				android:textSize="17sp"
				android:textStyle="bold"
				android:textColor="#ffa82700"
		/>
		<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="半场0：0"
				android:layout_marginTop="6dp"
				android:textColor="@color/text_primary"
				android:textSize="12sp"
		/>
	</LinearLayout>
	<LinearLayout
			android:layout_width="wrap_content"
			android:orientation="vertical"
			android:layout_marginLeft="33dp"
			android:gravity="center_horizontal"
			android:layout_height="wrap_content">
		<ImageView
				android:layout_width="30dp"
				android:layout_height="30dp"
				android:src="@drawable/ic_lottery_football"
		/>
		<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="拉齐奥"
				android:layout_marginTop="8dp"
				android:textColor="@color/text_primary"
				android:textSize="12sp"
		/>
	</LinearLayout>
</LinearLayout>