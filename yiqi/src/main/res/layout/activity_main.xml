<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary_comparison">

    <FrameLayout
        android:id="@+id/fl_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:layout_above="@+id/line" />

    <View xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="0.4dp"
        android:layout_above="@+id/radiogroup"
        android:background="#c3c3c3">

    </View>

    <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/radiogroup"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignParentBottom="true"
        android:background="@color/primary_comparison"
        android:gravity="center_vertical"
        android:orientation="horizontal">


        <RadioButton
            android:id="@+id/rb_home_lottery"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:checked="true"
            android:drawablePadding="2dp"
            android:drawableTop="@drawable/home_menu_lottery"
            android:gravity="center_horizontal"
            android:text="购彩大厅"
            android:textColor="@drawable/main_buttom_bar_text_color"
            android:textSize="11sp" />

        <RadioButton
            android:id="@+id/rb_home_documentary"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:checked="false"
            android:drawablePadding="2dp"
            android:drawableTop="@drawable/home_menu_documentary"
            android:gravity="center_horizontal"
            android:text="跟单大厅"
            android:textColor="@drawable/main_buttom_bar_text_color"
            android:textSize="11sp" />

        <RadioButton
            android:id="@+id/rb_home_find"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:checked="false"
            android:drawablePadding="2dp"
            android:drawableTop="@drawable/home_menu_find"
            android:gravity="center_horizontal"
            android:text="发现"
            android:textColor="@drawable/main_buttom_bar_text_color"
            android:textSize="11sp" />

        <RadioButton
            android:id="@+id/rb_home_mine"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:checked="false"
            android:drawablePadding="2dp"
            android:drawableTop="@drawable/home_menu_mine"
            android:gravity="center_horizontal"
            android:text="我的"
            android:textColor="@drawable/main_buttom_bar_text_color"
            android:textSize="11sp" />


    </RadioGroup>

</RelativeLayout>
